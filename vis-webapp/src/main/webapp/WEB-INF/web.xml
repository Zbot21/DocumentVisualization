    <servlet>
        <servlet-name>metadataServlet</servlet-name>
        <servlet-class>servlets.MetadataServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>metadataServlet</servlet-name>
        <url-pattern>/metadata</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>termSearchServlet</servlet-name>
        <servlet-class>servlets.DocumentSearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>termSearchServlet</servlet-name>
        <url-pattern>/term_search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>docServlet</servlet-name>
        <servlet-class>servlets.DocumentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>docServlet</servlet-name>
        <url-pattern>/docs</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>commonTermsServlet</servlet-name>
        <servlet-class>servlets.CommonTermsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>commonTermsServlet</servlet-name>
        <url-pattern>/common_terms</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>relatedTermsServlet</servlet-name>
        <servlet-class>servlets.RelatedTermsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>relatedTermsServlet</servlet-name>
        <url-pattern>/related_terms</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>multiTermSearch</servlet-name>
        <servlet-class>servlets.MultiQueryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>multiTermSearch</servlet-name>
        <url-pattern>/multi_term_search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SynonymsServlet</servlet-name>
        <servlet-class>servlets.SynonymsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SynonymsServlet</servlet-name>
        <url-pattern>/synonyms</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TermLocationsServlet</servlet-name>
        <servlet-class>servlets.TermLocationsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TermLocationsServlet</servlet-name>
        <url-pattern>/term_locs</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CompoundRelatedTermsServlet</servlet-name>
        <servlet-class>servlets.test_servlets.CompoundRelatedTermsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CompoundRelatedTermsServlet</servlet-name>
        <url-pattern>/compound_related_terms</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CombinedTerms</servlet-name>
        <servlet-class>servlets.CombinedRelatedTermsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CombinedTerms</servlet-name>
        <url-pattern>/combined_terms</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LastQueryServlet</servlet-name>
        <servlet-class>servlets.LastQueryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LastQueryServlet</servlet-name>
        <url-pattern>/last_query</url-pattern>
    </servlet-mapping>

    <!-- Second Tier Servlet -->
    <servlet>
        <servlet-name>SecondTier</servlet-name>
        <servlet-class>servlets.SecondTierServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SecondTier</servlet-name>
        <url-pattern>/second_tier</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LastDocServlet</servlet-name>
        <servlet-class>servlets.LastDocumentQuery</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LastDocServlet</servlet-name>
        <url-pattern>/last_doc</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

